{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "types": ["obsidian"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
